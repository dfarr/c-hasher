<%= form_tag("/", :method => "post") do %>

  <div class="field">
    <%=label_tag(:username, "Username:") %>
    <%= text_field_tag(:username) %>
  </div>

  <div class="field">
    <%=label_tag(:password, "Password:") %>
    <%= password_field_tag(:password) %>
  </div>

  <div class="field">
    <%= hidden_field_tag(:hashed_password) %>
  </div>

  <div class="actions">
    <%= submit_tag("Log In") %>
  </div>

  <br />

  <div class = "response">
    <%= @response %>
  </div>
<% end %>

